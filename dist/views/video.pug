doctype html
html
    head
        title="Video"
        script(src='/assets/js/live.js')
	
        style.
            body, html {
                cursor: none;
                height: 100%;
                width: 100%;
                overflow: hidden;
                margin: 0px;
                padding: 0px;
                background-color: #000;
            }
        script.
            document.domain = 'xscreen.io'
    body
        video(id="video" width="100%" height="100%" autoplay="true")
            source(src= contentPath + slide.media type="video/mp4")

        script.
            $(window).on('load',function(e){
                parent.clearSlideErrorTimeout();
            });

            var v = document.getElementsByTagName("video")[0];
            v.volume = 1;

            v.addEventListener('ended', function() {
                parent.slideEnd('#{uid}');
            }, true);
            v.addEventListener('error', function() {
                parent.slideEnd('#{uid}');
            }, true);
